{
    "manifest_version": 2,
    "name": "Trump is Russia",
    "description": "Change the R in Trump, Kushner, and Republican to a Cyrillic backwards R thing.",
    "version": "1.0",
    "browser_action": {
        "default_icon": "trumpet.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
           "matches": [
              "https://*/*",
              "https://*/*"
           ],
           "js": [
               "popup.js"
           ],
           "run_at": "document_end"
        }
    ],
    "permissions": ["activeTab"]
}
